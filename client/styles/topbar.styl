.top-bar .fake-navigation
  background-image url("fake.jpg")
  height 125px
  background-size height 140px
  background-color #00adc6
  background-repeat no-repeat

.top-bar .chart-types
  padding 10px 0 10px 0
  background #ebebeb
  display flex
  justify-content center
  align-items center

.top-bar .chart-types .label
  margin 0 30px 0 0
  font-size 15px
  font-weight bold
  color #727272

.top-bar .chart-type
  font-size 14px
  margin 0 10px 0 10px
  display flex
  align-items center
  color white

.top-bar .chart-type.available
  color #727272

.top-bar .chart-type img
  height 25px
  width 25px
  padding-right 10px

@media (max-width: 600px)

  .top-bar .chart-types
    flex-direction column
    align-items center

  .top-bar .chart-types .label
    margin 0 0px 0 0

  .top-bar .chart-type
    margin-top  10px