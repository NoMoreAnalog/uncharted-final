/*
/
/ NavBar
/
*/

.top-bar .nav-bar
  background-color #525866
  color white
  font-size 16px
  height 121px
  border-bottom solid #0faec6 2pt

.top-bar .nav-bar .unaki
  margin 40px 0 0 20px
  height 49px

/*
/
/ Chart Types
/
*/

.sticky
  top 0
  position fixed
  width 100%
  z-index 1001

.chart-selector
  padding 10px 0 10px 0
  background #ebebeb
  text-align center
  color white

.chart-selector .label
  margin 0 30px 0 0
  font-size 15px
  font-weight bold
  color #727272
  display inline-block

.top-bar .active
  color #727272

.chart-selector img
  height 25px
  width 25px

@media (max-width: 600px)

  .chart-selector
    flex-direction column
    align-items center

@media (max-width: 500px)

  .chart-selector .list
    display flex !important
    flex-direction column
    align-items center

  .chart-selector .item
    padding-left 0 !important
    padding-right 0 !important
    margin-left 0 !important