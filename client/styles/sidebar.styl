.side-bar
  position fixed
  right 0
  bottom 0
  background-color white
  display flex
  flex-direction column
  border-left solid 3px #ebebeb
  box-shadow 0 5px 15px rgba(black, 0.2)
  -webkit-transition: width 400ms cubic-bezier(0.215, 0.610, 0.355, 1.000);
  -moz-transition: width 400ms cubic-bezier(0.215, 0.610, 0.355, 1.000);
  -o-transition: width 400ms cubic-bezier(0.215, 0.610, 0.355, 1.000);
  transition: width 400ms cubic-bezier(0.215, 0.610, 0.355, 1.000); /* easeOutCubic */

.side-bar.expanded
  width 750px

.section
  padding 10px
  overflow-y hidden
  -webkit-transition: flex 200ms cubic-bezier(0.215, 0.610, 0.355, 1.000);
  -moz-transition: flex 200ms cubic-bezier(0.215, 0.610, 0.355, 1.000);
  -o-transition: flex 200ms cubic-bezier(0.215, 0.610, 0.355, 1.000);
  transition: flex 200ms cubic-bezier(0.215, 0.610, 0.355, 1.000); // easeOutCubic

.section.countries
  flex 0 1 40%
  border-bottom solid 3px #ebebeb

.section.indicators
  flex 0 1 60%
  border-bottom solid 3px #ebebeb

.view-active-trigger
  flex 0 0 50px

.section.active-indicators.open
  flex 0 1 100%

.section.countries.closed,
.section.indicators.closed,
.section.active-indicators.closed
  padding 0
  flex 0 0 0px
  border none

.section .scrollArea
  position relative
  overflow: auto;

/*
/
/ Side Bar Trigger
/
*/

.side-bar-trigger
  z-index 1000
  position absolute
  float left
  margin 50px 0 0 -50px
  padding 0
  box-shadow: 0 5px 15px rgba(black, 0.2);
  border-radius 8px 0 0 8px
  height 50px

button.side-bar-trigger
  background none
  border none
  outline none
  font inherit
  color inherit

button.side-bar-trigger
  cursor pointer

.side-bar-trigger .material-icons
  font-size 50px
  background #00adc6
  border-radius 8px 0 0 8px
  height 50px
  width 50px
  color white

@media (max-width: 768px)

  .side-bar-trigger
    display none