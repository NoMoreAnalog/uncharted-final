.side-bar
  box-sizing border-box
  display flex
  flex-direction column
  border-left solid 3px #ebebeb
  -webkit-transition: all 400ms cubic-bezier(0.215, 0.610, 0.355, 1.000);
  -moz-transition: all 400ms cubic-bezier(0.215, 0.610, 0.355, 1.000);
  -o-transition: all 400ms cubic-bezier(0.215, 0.610, 0.355, 1.000);
  transition: all 400ms cubic-bezier(0.215, 0.610, 0.355, 1.000); /* easeOutCubic */
  box-shadow 0 5px 15px rgba(black, 0.2)

.section
  box-sizing border-box
  padding 10px
  overflow-y hidden

.section.countries
  flex 0 1 30%
  border-bottom solid 3px #ebebeb

.section.indicators
  flex 0 1 70%
  border-bottom solid 3px #ebebeb

.section.active-indicators
  display none
  flex 0 0 0%
  border-bottom solid 3px #ebebeb

.view-active-trigger
  display none

@media (max-width: 600px)

  .side-bar
    display block
    box-shadow none

  .section
    height 300px

/*
/
/ Side Bar Trigger
/
*/

.side-bar-trigger
  z-index 1000
  position absolute
  float left
  margin 50px 0 0 -50px
  padding 0
  box-shadow: 0 5px 15px rgba(black, 0.2);
  border-radius 8px 0 0 8px
  height 50px

.side-bar-trigger .material-icons
  font-size 50px
  background #00adc6
  border-radius 8px 0 0 8px
  height 50px
  width 50px
  color white

.side-bar.expanded
  flex 0 0 750px

@media (max-width: 600px)

  .side-bar-trigger
    display none

