/*
/
/ Chart area
/
*/

.chart-area
  padding 10px 50px 0 50px
  min-height 850px

.chart-area .title
  overflow hidden
  min-height 75px

.chart-area hr
  border solid 1px #00adc6
  width 250px
  margin-left 0

/*
/
/ Chart stage
/
*/

.chart-area .stage
  background-color #fdfdfd

.chart-area .stage .chart-menu
  float right
  position relative
  top 20px
  right 20px

/*
/
/ Chart wrapper
/
*/

.chart-area .chart-wrapper
  height 549px
  padding 0 20px 0px 75px

/*
/
/ Line
/
*/

.chart-wrapper .line
  -webkit-transition d 200ms
  -moz-transition d 200ms
  -o-transition d 200ms
  transition d 200ms

.chart-wrapper .dot
  -webkit-transition cx 200ms
  -moz-transition cx 200ms
  -o-transition cx 200ms
  transition cx 200ms

.chart-wrapper .bar
  -webkit-transition width 200ms
  -moz-transition width 200ms
  -o-transition width 200ms
  transition width 200ms
  -webkit-transition x 200ms
  -moz-transition x 200ms
  -o-transition x 200ms
  transition x 200ms

//-webkit-transition transform  400ms
//-moz-transition transform 400ms
//-o-transition transform 400ms
//transition transform 400ms

.grid .tick line
  stroke #ABABAB
  opacity 0.7
  stroke-dasharray 5 1

.domain
  display none

.x-axis .domain
  stroke #ABABAB
  display block

.chart-wrapper .line
  stroke-dasharray 500%
  -webkit-animation line-effect 2s ease-out forwards
  animation line-effect 2s ease-out forwards

@-webkit-keyframes line-effect
  0%
    stroke-dashoffset 500%
  100%
    stroke-dashoffset 0%

@keyframes line-effect
  0%
    stroke-dashoffset 500%
  100%
    stroke-dashoffset 0%