/*
/
/ Chart area
/
*/

.chart-area
  padding 10px 50px 0 50px

.chart-area .title
  overflow hidden
  min-height 75px
  margin-bottom 25px

.chart-area hr
  border solid 1px #00adc6
  width 250px
  margin-left 0

/*
/
/ Chart stage
/
*/

.chart-area .stage
  background-color #fdfdfd

.chart-area .stage .chart-menu
  float right
  position relative
  top 20px
  right 20px

/*
/
/ Chart wrapper
/
*/

.chart-area .chart-wrapper
  min-height 500px

.chart-area .chart-wrapper
  padding 20px 75px 20px 75px

/*
/
/ Legends
/
*/

.chart-area .legends
  padding 0 100px

.chart-area .legend .scrollArea
  position relative
  overflow auto
  height 75px

/*
/
/ Line
/
*/

.chart-wrapper .line
  fill none
  stroke #7dc7f4
  stroke-width 5px

.chart-wrapper .line, .chart-wrapper .dot, .chart-wrapper .bar
  -moz-transition all 400ms cubic-bezier(0.215, 0.610, 0.355, 1.000)
  -o-transition all 400ms cubic-bezier(0.215, 0.610, 0.355, 1.000)
  transition all 400ms cubic-bezier(0.215, 0.610, 0.355, 1.000)