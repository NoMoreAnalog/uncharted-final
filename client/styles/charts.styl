.chart-area
  padding 10px 50px 0 50px

.chart-area .title
  overflow hidden
  min-height 75px
  margin-bottom 25px

.chart-area hr
  border solid 1px #00adc6
  width 250px
  margin-left 0

.chart-area .chart
  min-height 500px

.chart-area .chart-wrapper
  background-color #fdfdfd
  padding 20px

.chart-area .legends
  padding 0 100px

.chart-area .legend .scrollArea
  position relative
  overflow auto
  height 75px