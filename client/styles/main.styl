html, body, #app, .main-layout
  height 100%
  min-height 650px
  margin 0

/*
/
/ Page layout responsiveness
/
*/

.main-layout,
.top-bar,
.nav-bar,
.chart-selector,
.wrapper,
.content,
.chart-area,
.footer,
.side-bar
  box-sizing border-box

.main-layout
  display flex
  flex-direction column

/*
/
/ Wrapper area
/
*/

.wrapper
  flex 1 1 100%
  display flex

.content
  flex 1 1 100%
  display flex
  flex-direction column

.chart-area
  flex 1 1 100%

.footer
  width 100%
  flex 1 0 100px

.side-bar
  flex 0 0 300px
  height 100%

@media (max-width: 768px)

  .main-layout, .wrapper, .content, .side-bar
    display block

  .chart-area
    height 500px

/*
/
/ Top Bar
/
*/

.top-bar .nav-bar
  background-color #525866
  border-bottom solid #0faec6 2pt

.top-bar .nav-bar .unaki
  margin 20px
  height 49px

/*
/
/ Text Highlighting
/
*/

::selection
  background #00adc6
  color: white

::-moz-selection
  background #00adc6
  color: white

/*
/
/ Scrollbar
/
*/

::-webkit-scrollbar
  width 10px

/* Track */
::-webkit-scrollbar-track
  border-radius 10px
  border-radius 10px
  background #dadada

/* Handle */
::-webkit-scrollbar-thumb
  background #727272
  border 2px solid transparent

  -webkit-border-radius 10px
  -webkit-background-clip content-box

  -moz-border-radius 10px
  -moz-background-clip content-box

  border-radius 10px
  background-clip content-box

::-webkit-scrollbar-thumb:window-inactive
  background #a4a4a4
  border 2px solid transparent

  -webkit-border-radius 10px
  -webkit-background-clip content-box

  -moz-border-radius 10px
  -moz-background-clip content-box

  border-radius 10px
  background-clip content-box