/*
/
/ Layout
/
*/

.content-wrapper
  margin-right 300px
  -webkit-transition: margin 400ms cubic-bezier(0.215, 0.610, 0.355, 1.000);
  -moz-transition: margin 400ms cubic-bezier(0.215, 0.610, 0.355, 1.000);
  -o-transition: margin 400ms cubic-bezier(0.215, 0.610, 0.355, 1.000);
  transition: margin 400ms cubic-bezier(0.215, 0.610, 0.355, 1.000); /* easeOutCubic */

.content-wrapper.shrink
  margin-right 750px

.side-bar
  width 300px

.footer .top
  margin-top 20px
  height 100px
  width 100%
  border-top solid 3px #ebebeb

.footer .bottom
  height 50px
  width 100%
  background-color #525865

@media (max-width: 768px)

  .content-wrapper
    width 100%
    margin 0

  .side-bar
    box-shadow none
    border none
    width 100% !important
    position relative
    margin 0
    height 1000px

  .section
    height 500px
    border-bottom none !important
    border-top solid 3px #ebebeb

  .active-indicators, .view-active-trigger
    display none !important

/*
/
/ Top Bar
/
*/

.top-bar .nav-bar
  background-color #525866
  border none

.top-bar .chart-selector
  border none
  box-shadow none