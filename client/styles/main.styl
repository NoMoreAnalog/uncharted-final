html, body, #app, .main-layout
  height 100%
  min-height 650px

body
  font-family 'Open Sans', sans-serif
  //font-family 'Lato', sans-serif
  //font-family 'Roboto', sans-serif
  margin 0

button
  background none
  border none
  outline none
  font inherit
  color inherit

button:hover
  cursor pointer

/*
/
/ Page layout responsiveness
/
*/

.main-layout,
.top-bar,
.nav-bar,
.chart-selector,
.wrapper,
.content,
.chart-area,
.footer,
.side-bar
  box-sizing border-box

.main-layout
  display flex
  flex-direction column

// Top bar area

.top-bar
  width 100%
  flex 1 1 220px // IE needs a flex basis value
  display flex
  flex-direction column

.nav-bar
  width 100%
  flex 0 0 120px

.chart-selector
  width 100%
  flex 1 1 100%

// Wrapper area

.wrapper
  flex 1 1 100%
  display flex

.content
  flex 1 1 100%
  display flex
  flex-direction column

.chart-area
  flex 1 1 100%

.footer
  width 100%
  flex 1 0 100px

.side-bar
  flex 0 0 300px
  height 100%

@media (max-width: 600px)

  .main-layout, .top-bar, .wrapper, .content, .side-bar
    display block

  .wrapper
    display block

  .chart-area
    height 500px

/*
/
/ Text Highlighting
/
*/

::selection
  background #00adc6
  color: white

::-moz-selection
  background #00adc6
  color: white

/*
/
/ Scrollbar
/
*/

::-webkit-scrollbar
  width 10px

/* Track */
::-webkit-scrollbar-track
  border-radius 10px
  border-radius 10px
  background #dadada

/* Handle */
::-webkit-scrollbar-thumb
  background #727272
  border 2px solid transparent

  -webkit-border-radius 10px
  -webkit-background-clip content-box

  -moz-border-radius 10px
  -moz-background-clip content-box

  border-radius 10px
  background-clip content-box

::-webkit-scrollbar-thumb:window-inactive
  background #a4a4a4
  border 2px solid transparent

  -webkit-border-radius 10px
  -webkit-background-clip content-box

  -moz-border-radius 10px
  -moz-background-clip content-box

  border-radius 10px
  background-clip content-box